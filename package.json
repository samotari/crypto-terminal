{
  "name": "crypto-terminal",
  "version": "1.0.0",
  "description": "An open-source terminal application with which merchants can accept in-person cryptocurrency payments.",
  "private": true,
  "app": {
    "name": "CryptoTerminal"
  },
  "main": "index.js",
  "scripts": {
    "android-device": "grunt build && cordova run android --device",
    "start": "grunt",
    "test": "grunt test",
    "build-signed-apk": "./scripts/build-signed-apk.sh",
    "generate-android-signing-key": "keytool -genkey -v -keystore android.keystore -alias cryptoTerminalKey -keyalg RSA -keysize 2048 -validity 10000"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:samotari/crypto-terminal.git"
  },
  "author": {
    "name": "Charles Hill",
    "email": "chill@degreesofzero.com"
  },
  "contributors": [
    {
      "name": "Carlos Garcia Ortiz",
      "email": "yo@carlosgarciaortiz.com"
    },
    {
      "name": "Robin Cussol"
    }
  ],
  "license": "AGPL-3.0",
  "homepage": "https://github.com/samotari/crypto-terminal",
  "dependencies": {
    "android-versions": "1.3.0",
    "async": "2.6.0",
    "backbone": "1.3.3",
    "backbone.localstorage": "2.0.2",
    "base-x": "3.0.4",
    "bigi": "1.4.2",
    "bignumber.js": "6.0.0",
    "browserify": "16.1.0",
    "bs58": "4.0.1",
    "chai": "4.1.2",
    "cordova-android": "7.0.0",
    "cordova-android-support-gradle-release": "1.2.0",
    "cordova-browser": "5.0.3",
    "cordova-plugin-inappbrowser": "2.0.2",
    "cordova-plugin-whitelist": "1.3.3",
    "cordova-sqlite-storage": "2.2.1",
    "ecurve": "1.0.6",
    "fastclick": "1.0.6",
    "grunt": "1.0.2",
    "grunt-contrib-concat": "1.0.1",
    "grunt-contrib-connect": "1.0.2",
    "grunt-contrib-copy": "1.0.0",
    "grunt-contrib-cssmin": "2.2.1",
    "grunt-contrib-uglify": "3.3.0",
    "grunt-eslint": "20.1.0",
    "grunt-mocha-test": "0.13.3",
    "grunt-newer": "1.3.0",
    "handlebars": "4.0.11",
    "jquery": "3.3.1",
    "js-sha3": "0.7.0",
    "load-grunt-config": "0.19.2",
    "mocha": "5.0.0",
    "moment": "2.20.1",
    "open-sans-fontface": "https://github.com/samotari/open-sans/archive/1.4.2.tar.gz",
    "phonegap-plugin-barcodescanner": "7.0.2",
    "puppeteer": "1.2.0",
    "qrcode": "1.2.0",
    "time-grunt": "1.4.0",
    "underscore": "1.8.3"
  },
  "cordova": {
    "platforms": [
      "android",
      "browser"
    ],
    "plugins": {
      "cordova-plugin-whitelist": {},
      "cordova-sqlite-storage": {},
      "phonegap-plugin-barcodescanner": {},
      "cordova-android-support-gradle-release": {
        "ANDROID_SUPPORT_VERSION": "26.+"
      },
      "cordova-plugin-inappbrowser": {}
    }
  }
}
