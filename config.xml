<?xml version='1.0' encoding='utf-8'?>
<widget id="com.github.learnbydoing.cryptoterminal" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CryptoTerminal</name>
    <description>A merchant terminal app which allows payments by customers via multiple cryptocurrencies.</description>
    <icon src="images/favicon.png" />
    <access origin="https://*/*" />
    <platform name="android">
        <hook src="scripts/copy-build-extras-gradle-to-platform-dir.js" type="before_prepare" />
        <icon density="ldpi" src="images/favicon/favicon-android-ldpi.png" />
        <icon density="mdpi" src="images/favicon/favicon-android-mdpi.png" />
        <icon density="hdpi" src="images/favicon/favicon-android-hdpi.png" />
        <icon density="xhdpi" src="images/favicon/favicon-android-xhdpi.png" />
        <icon density="xxhdpi" src="images/favicon/favicon-android-xxhdpi.png" />
        <icon density="xxxhdpi" src="images/favicon/favicon-android-xxxhdpi.png" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1.3.3" />
    <plugin name="cordova-sqlite-storage" spec="2.2.1" />
    <preference name="iosExtraFilesystems" value="library,library-nosync,documents,documents-nosync,cache,bundle,root" />
    <preference name="AndroidExtraFilesystems" value="files,files-external,documents,sdcard,cache,cache-external,assets,root" />
    <plugin name="cordova-plugin-file" spec="6.0.1" />
    <engine name="android" spec="7.0.0" />
    <engine name="browser" spec="5.0.3" />
</widget>
